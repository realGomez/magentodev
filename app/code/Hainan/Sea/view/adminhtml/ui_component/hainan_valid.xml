<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <dataSource name="hainan_valid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <!-- the PHP class that implements a data provider -->
            <argument name="class" xsi:type="string">Hainan\Sea\Model\DataProvider</argument>

            <!-- redundant with the `dataSource` name -->
            <argument name="name" xsi:type="string">hainan_simple_data_source</argument>

            <!-- required: means ui components are meant to work with models -->
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>

            <!-- required: means ui components are meant to work with URL passing -->
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>

    </dataSource>

    <argument name="data" xsi:type="array">
        <item name="template" xsi:type="string">templates/hainan_valid/default</item>
    </argument>
<!--    <htmlContent name="our_first_content">-->
<!--        <argument name="block" xsi:type="object">Hainan\Sea\Component\SimpleValid</argument>-->
<!--    </htmlContent>-->

    <htmlContent class="Hainan\Sea\Component\SimpleValidHijackingHtmlContent"  name="our_first_content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="component" xsi:type="string">Hainan_Sea/js/simple_valid_component</item>
            </item>
        </argument>
    </htmlContent>


</container>
